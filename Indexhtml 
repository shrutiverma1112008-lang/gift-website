<script>
let currentPage=1;
const totalPages=5;

// Page narration texts
const narrationTexts = [
  "Welcome to our business world",
  "Shri Paramhans Enterprises",
  "Our services: We deal in Accounting Software, Tally Training and Customisation, Tally Services and Data Repair, Tally Cloud Services",
  "Our products: TallyPrime Single User 26500 rupees GST included, TallyPrime Multi User 80000 rupees GST included, Single User Renewal 5310 rupees GST included, Multi User Renewal 15930 rupees GST included",
  "Thank you for watching. For more details call us at 9041902520 and 9216963450"
];

// Speak function
function speak(text){
  if('speechSynthesis' in window){
    let msg = new SpeechSynthesisUtterance();
    msg.text = text;
    msg.volume = 1; // max volume
    msg.rate = 1; // normal speed
    msg.pitch = 1; // normal pitch
    window.speechSynthesis.speak(msg);
  } else {
    alert("Sorry, your device does not support voice narration.");
  }
}

// Start narration
document.getElementById('startBtn').addEventListener('click', function(){
  this.style.display='none';
  speak(narrationTexts[0]);
});

// Next page
function nextPage(){
  currentPage++;
  if(currentPage>totalPages) currentPage=1;
  document.getElementById('page'+currentPage).scrollIntoView({behavior:'smooth'});
  window.speechSynthesis.cancel(); // stop previous narration
  speak(narrationTexts[currentPage-1]);
}
</script>

